{
 "name": "Selectivity for HN",
 "description": "Adds a 'hide' option to the stories on the Hacker News front page.",
 "homepage_url": "http://swapped.cc/iip",
 "update_url": "https://raw.githubusercontent.com/bprs/internet-improvement-project/master/hn/selectivity.chrome/update.xml",
 "permissions": [
     "tabs",
     "https://news.ycombinator.com/*"
 ],
 "content_scripts": [
   {
     "matches": ["https://news.ycombinator.com/*"],
     "js":      ["jquery-1.5.2.min.js", "jquery.color.min.js", "bookmarklet.js"]
   }
 ],
 "version": "1.1",
 "manifest_version": 2
}
